#!/usr/bin/env bash

# not in docker
if [[ -z "$RUNNING_IN_DOCKER" ]]; then
  cd $(dirname $(realpath $0))
fi

DENO=deno

if [[ "$1" == cache ]]; then
  until
    $DENO run --unstable --compat -A cache.ts 
  do
    sleep 1
  done
  $DENO run --unstable --compat -A cache.ts
else
  $DENO repl --unstable --compat --eval-file=https://deno.land/x/subshell@0.0.2/init.ts
fi
